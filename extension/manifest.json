{
    "manifest_version": 3,
    "name": "Open Link in Incognito",
    "version": "1.0",
    "description": "Open links in incognito mode when clicking with Command+Shift (or Ctrl+Shift on Windows/Linux)",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Open Link in Incognito"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}